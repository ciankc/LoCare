<!DOCTYPE html>
<html>

<head>
  <title>Locare</title>
  <meta name="viewport" content="initial-scale=1.0">
  <meta charset="utf-8">
  <link rel="stylesheet" href="stylesheets/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>

<body>
  <input id="pac-input" class="controls" type="text" placeholder="Search ID">
  <input type="button" id="searchBtn" value="Search" onclick="handleInput();" />
  <input type="button" id="postBtn" value="Post" onclick="postStuff();" />

  <div id="map"></div>
  <script>
    $("#pac-input").keyup(function (event) {
      if (event.keyCode === 13) {
        $("#searchBtn").click();
      }
    });

    function postStuff() {
      let data = {};
      data.uniqueid = "Sahil";
      data.timestamp = 12124124238;
      data.longitude = -124;
      data.latitude = 125;
      //data = JSON.stringify(data);
      console.log(data);
      jQuery.ajax({
        url: '/api/newLoc',
        type: "POST",
        data: JSON.stringify(data),
        contentType: "application/json; charset=utf-8",
        success: function (resp) {
          console.log(resp);
        },
        error: function () {
          console.log("error");
        }
      });
    }

    function handleInput() {
      var value = document.getElementById('pac-input').value;

      var getStringValue = '/api/getLoc?uniqueid=' + value;

      var jsonResp;
      $.get(getStringValue, function (resp) {
        jsonResp = resp;
        alert(JSON.stringify(jsonResp));
      });
    }



    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: 34.0522, lng: -118.2437 },
        zoom: 11
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNj-YsCIOTmbGfofgV6o4D8Ct39hVAbqI&callback=initMap" async
    defer></script>
</body>

</html>
